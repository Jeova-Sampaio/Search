<p id="notice"><%= notice %></p>

<div class="container">    
  
  <header class="container-fluid text-center">
  <h3>PESSOAS</h3>
  </header>
  <br>
<div class="row">

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Telefone</th>
      <th>#</th>

      <th colspan="3"></th>
    </tr>
    
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.phone %></td>
        <td><%#= link_to 'Mostrar', person %></td>
        <td><%#= link_to 'Editar', edit_person_path(person) %></td>
        <td><%#= link_to 'Apagar', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      
    <% end %>
  </tbody>
</table>
</div>

<br>
<div class="container text-center">
  <%= link_to '<button type="button">Cadastrar pessoa</button>'.html_safe, new_person_path %>
</div>

</div>
  <hr>
</div>

<footer class="container-fluid text-center">
  <p>Footer Text</p>
</footer>

